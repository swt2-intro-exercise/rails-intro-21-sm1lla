<h1>Authors</h1>
<p><%= link_to 'New', new_author_path %></p>
<table>
    <tr>
        <th>Name</th>
        <th>Homepage</th>
        <th></th>
        <th></th>
    </tr>
    <% @authors.each do |author| %>
        <tr>
        <td>
            <a href="<%= author_path(author) %>">
                <%= author.name%>
            </a>
        </td>
        <td><%= author.homepage %></td>
        <td><%= link_to 'Edit', edit_author_path(author)%></td>
        <td><%= link_to 'Delete', author_path(author),
                method: :delete,
                data: {confirm: 'Are you sure?'}%></td>
        </tr>
    <% end %>
</table>
